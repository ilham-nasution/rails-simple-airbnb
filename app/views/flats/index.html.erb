<div class="container">
<h1 class="mb-5 text-center">Flats List</h1>

<div class="card-deck">
  <% @flats.each do |flat| %>
    <%= link_to flat_path(flat), class: "text-decoration-none text-body" do %>
      <div class="col-4 mb-4">
        <div class="card">
          <img src="https://cdn.pixabay.com/photo/2014/12/10/23/37/architecture-563614_1280.jpg" class="card-img-top" alt="apt">
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.address %></p>
            <p class="card-text mb-5"><i class="fas fa-users mr-2"></i><%= flat.number_of_guests %><i class="fas fa-dollar-sign ml-5 mr-2"></i><%= flat.price_per_night %></p>
            <p class="mb-0"><i class="far fa-edit mr-1"></i><%= link_to "edit" %> <i class="far fa-trash-alt ml-2 mr-1"></i><%= link_to "remove"%></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
</div>

